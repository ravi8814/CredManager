@using CredMgr.Models
@model InsuranceMappingVM
 
@{
    ViewBag.Title = "Provider";
    Layout = null;
}
<!-- jQuery library -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">



<!-- Latest compiled JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

@using (Html.BeginForm())
{

    <!-- start page content -->
    <div class="page-bar">
        <div class="page-title-breadcrumb">
            <div class=" pull-left">
                <div class="page-title">Insurance Master</div>
            </div>
            <ol class="breadcrumb page-breadcrumb pull-right">
                <li>
                    <i class="fa fa-home"></i>&nbsp;<a class="parent-item"
                                                       href="~/Home/Dashboard">Home</a>&nbsp;<i class="fa fa-angle-right"></i>
                </li>
                <li class="active">Insurance Master</li>
            </ol>
        </div>
    </div>




    <div class="container" style="width:40%; margin-top:2%">
        <a href="#" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Open Modal</a>
        <div class="modal fade" id="myModal" style="align-content:center">
            <div class="modal-content">
                <div class="modal-header">
                    <a href="#" class="close" data-dissmiss="modal">&times;</a>
                    <h3 class="modal-title"> Add Mapping</h3>

                </div>
                <div class="modal-body">
                    @Html.RenderPartial("~/Views/Master/AddMasterMapping13.cshtml",)
                  </div>
                <div class="modal-footer"></div>
            </div>

        </div>
    </div>




    <div class="row">
        <div class="col-md-12">
            <div class="card card-topline-red">
                <div class="card-head">
                    <header>INSURANCE MAPPING</header>
                </div>
                <div class="card-body ">
                    <div class="row">
                        <div class="col-md-6 col-sm-6 col-xs-6">
                            <div class="btn-group">
                                <a href="~/Master/EditInsurance" id="addRow"
                                   class="btn btn-info">
                                    Add New <i class="fa fa-plus"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="table-scrollable">
                        <table class="table table-hover table-checkable order-column full-width"
                               id="example4">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th> Insurance Code </th>
                                    <th> Insurance Name </th>
                                    <th> Address Line 1 </th>
                                    <th> Address Line 2 </th>
                                    <th> City </th>
                                    <th> State </th>
                                    <th> ZipCode </th>
                                    <th> PhoneNumber </th>
                                    <th> Email </th>
                                    <th> Website </th>
                                   <th> Payer ID </th>
                                    <th> Note </th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (var i = 0; i < Model.Count; i++)
                                {

                                    @Html.HiddenFor(x => x[i].PK_Insurance)
                                    <tr class="odd gradeX">
                                        <td></td>
                                        <td>@Html.DisplayFor(x => x[i].InsuranceCode)</td>
                                        <td>@Html.DisplayFor(x => x[i].InsuranceName)</td>
                                        <td>@Html.DisplayFor(x => x[i].AddressLine1)</td>
                                        <td>@Html.DisplayFor(x => x[i].AddressLine2)</td>
                                        <td>@Html.DisplayFor(x => x[i].City)</td>
                                        <td>@Html.DisplayFor(x => x[i].State)</td>
                                        <td>@Html.DisplayFor(x => x[i].ZipCode)</td>
                                        <td>@Html.DisplayFor(x => x[i].PhoneNumber)</td>
                                        <td>@Html.DisplayFor(x => x[i].EmailId)</td>
                                        <td>@Html.DisplayFor(x => x[i].Website)</td>
                                        <td>@Html.DisplayFor(x => x[i].PayerID)</td>
                                        <td>@Html.DisplayFor(x => x[i].Note)</td>
                                        <td>@Html.DisplayFor(x => x[i].InsuranceCode)</td>

                                        <td>
                                           

                                            @Html.ActionLink("Edit", "EditInsurance",
         new { controller = "Master", id = (Model[i].PK_Insurance) },
         new { @class = "btn btn-primary btn-xs" })


                                        </td>
                                    </tr>

                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<!-- end page content -->
