@using CredMgr.Models
@model MasterMappingModel
@{
    ViewBag.Title = "AddMapping";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}


<div class="page-bar">
    <div class="page-title-breadcrumb">
        <div class=" pull-left">
            <div class="page-title">Add Mapping</div>
        </div>
        <ol class="breadcrumb page-breadcrumb pull-right">
            <li>
                <i class="fa fa-home"></i>&nbsp;<a class="parent-item"
                                                   href="~/Home/Dashboard">Home</a>&nbsp;<i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a class="parent-item" href="~/Master/Provider">Provider Master</a>&nbsp;<i class="fa fa-angle-right"></i>
            </li>
            <li class="active">Add Mapping</li>
        </ol>
    </div>
</div>


@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-12 col-sm-12">
           

            <div class="card card-box">
                <div class="card-body" id="bar-parent">
                    <form action="#" id="form_sample_1" class="form-horizontal">
                        <div class="form-body">
                            <div class="form-group row wrap-input100 validate-input" data-validate="Enter username">
                                <label class="control-label col-md-3">
                                    State
                                    <span class="required"> * </span>
                                </label>
                                <div class="col-md-5">
                                    @Html.DropDownListFor(x => x.StateId, new SelectList(ViewBag.StateList, "PK_States", "name"), "--State List--",  new { @class = "form-control" })


                                </div>
                            </div>



                            <div class="form-group row">
                                <label class="control-label col-md-3">
                                    Providers
                                    <span class="required"> * </span>
                                </label>
                                <div class="col-md-5">
                                    @Html.DropDownListFor(x => x.ProviderId, new SelectList(ViewBag.ProviderList, "PK_Provider", "ProvName"), "--Insurance List--", new { @class = "form-control " })
                                    @*@Html.ListBoxFor(x => x.ProviderId, ViewBag.ProviderList, new { @class = "listbox" })*@
                                </div>
                            </div>


                            <div class="form-group row">
                                <label class="control-label col-md-3">
                                    Aplication Method
                                    <span class="required"> * </span>
                                </label>
                                <div class="col-md-5">
                                  
                                    @Html.EnumDropDownListFor(x => x.AplicationMethod, "--Select Application Method--", new { @class = "form-control" })
                                    

                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="control-label col-md-3">
                                    Plans
                                    <span class="required"> * </span>
                                </label>
                                <div class="col-md-5">

                                    @Html.EnumDropDownListFor(x => x.Plans, "--Select Plans--", new { @class = "form-control" })


                                </div>
                            </div>


                            <div class="form-group row">
                                <label class="control-label col-md-3">
                                    Web Portal
                                    <span class="required"> * </span>
                                </label>
                                <div class="col-md-5">
                                    @Html.EnumDropDownListFor(x => x.WebPortal, "--Web Portal--", new { @class = "form-control" })

                                </div>
                            </div>


                            <div class="form-group row">
                                <label class="control-label col-md-3">
                                    Participation Status
                                    <span class="required"> * </span>
                                </label>
                                <div class="col-md-5">
                                   @Html.EnumDropDownListFor(x => x.ParticipationStatus, "--Participation Status--", new { @class = "form-control" })

                                </div>
                            </div>


                            <div class="form-group row">
                                <label class="control-label col-md-3">
                                    EDI
                                    <span class="required"> * </span>
                                </label>
                                <div class="col-md-5">
                                    @Html.EnumDropDownListFor(x => x.EDI, "--EDI--", new { @class = "form-control" })

                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="control-label col-md-3">
                                    Effective Start Date
                                    <span class="required"> * </span>
                                </label>
                                <div style="margin:0 0 0 15px">
                                    @Html.EditorFor(model => model.EffectiveStartDate, new { htmlAttributes = new { @class = "form-control input-height" } })
                                    
                                    @*<input id="EffectiveStartDate" type="text" placeholder="DOB(MM/DD/YYYY)" value="@Model.EffectiveStartDate" onfocus="(this.type='date')" autocomplete="off" class="form-control input-height" required>*@
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="control-label col-md-3">
                                    Effective End Date
                                    <span class="required"> * </span>
                                </label>
                                <div style="margin:0 0 0 15px">
                                    @Html.EditorFor(model => model.EffectiveEndDate, new { htmlAttributes = new { @class = "form-control" } })
                                                                   </div>
                            </div>

                            <div class="form-group row">
                                <label class="control-label col-md-3">
                                    Next Follow-Up
                                    <span class="required"> * </span>
                                </label>
                                <div style="margin:0 0 0 10px">
                                    @Html.EditorFor(model => model.NextFollowUpDate, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                            </div>


                            <div class="form-group row">
                                <label class="control-label col-md-3">
                                    Comment
                                </label>
                                <div class="col-md-5">
                                    <textarea name="Comment" placeholder="Enter any note" id="Comment" value="@Model.Comment"
                                              class="form-control-textarea" rows="5" required></textarea>

                                </div>
                            </div>

                            <div class="form-actions">
                                <div class="row">
                                    <div class="offset-md-3 col-md-9">
                                        <button type="submit" class="btn btn-info m-r-20">Submit</button>
                                        <button type="reset" class="btn btn-default">Cancel</button>
                                    </div>
                                </div>
                            </div>


  </div>
</form>
                </div>
            </div>
        </div>
    </div>
}

<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<link href="http://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.3/css/bootstrap.min.css"
      rel="stylesheet" type="text/css" />
<script type="text/javascript" src="http://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.3/js/bootstrap.min.js"></script>
<link href="http://cdn.rawgit.com/davidstutz/bootstrap-multiselect/master/dist/css/bootstrap-multiselect.css" rel="stylesheet" type="text/css" />
<script src="http://cdn.rawgit.com/davidstutz/bootstrap-multiselect/master/dist/js/bootstrap-multiselect.js" type="text/javascript"></script>

<script>

  $(document).ready(function() {
      $("#Date").datepicker();
  });
</script> 

<script type="text/javascript">
        $(function () {
            $('.listbox').multiselect({
                includeSelectAllOption: true
            });
        });
</script>
